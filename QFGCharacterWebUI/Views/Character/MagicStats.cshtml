        <td>
            @Html.TextBoxFor(x => x.MagicSkillLevitate, (Model.MagicSkillLevitateEnabled) ? (object)new { @maxlength=3, @class="inputStat"} : (object)new { @maxlength=3, @class="inputStat", @disabled="disabled" })
