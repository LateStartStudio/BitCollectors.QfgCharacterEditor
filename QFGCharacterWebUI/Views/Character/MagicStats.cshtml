        <td>
            @Html.TextBoxFor(x => x.MagicSkillForceBolt, (Model.MagicSkillForceBoltEnabled) ? (object)new { @maxlength=3, @class="inputStat"} : (object)new { @maxlength=3, @class="inputStat", @disabled="disabled" })
        </td>
    </tr>
    <tr>
